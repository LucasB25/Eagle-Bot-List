#cards
  if (cards.length == 0)
    .row.mb-4
      .col-12.pb-5.pt-4.mt-5.mb-5.text-center
        h1
          i.far.fa-frown-open
        h2.mb-1 No Results
        p.text-damp Try searching for something else!

  else
  each card in cards
    .card.botcard(style=`transform: translate(0px, 0px); opacity: 1;`)
      .card-body.p-3.pb-2.botcard-hassplash(style=`border-radius: 4px 4px 0px 0px; background: linear-gradient(rgba(48, 48, 48, 0.3) 50%, rgb(48, 48, 48) 98%), url("${card.banner}");`)
        // 
        .row
          .col.pr-0.imgcol
            .w-100.text-center
              img.cardimg(draggable='false' loading='lazy' src=card.logo alt='Bot Avatar' onerror='this.src=`https:\/\/discord.mx/hcvOiDRmYc.jpg`')
          .col.flexcen
            .w-100
              .botcount.mb-2.text-damp.text-bold(data-toggle='tooltip' data-placement='left' title='Votes This Month')
                span.float-left.text-white.h-100
                  i.fad.fa-chevron-up.pt-1.pb-1
                | #{card.likes || 0}
              .botcount.text-damp.text-bold(data-toggle='tooltip' data-placement='left' title='Server Count')
                span.float-left.text-white.h-100
                  i.fad.fa-list.pt-1.pb-1
                | N/A
      .card-body.pt-0.pb-0
        h4.mb-0.text-center.pt-1 
          | #{card.username}  
          if(card.certify === true)
              span.text-blue.mr-1(data-toggle='tooltip' title='Certified Bot')
                  i.fad.fa-badge-check
        p.mb-2.text-center.text-muted.botdesc 
          | #{card.description}
      hr.mt-3.mb-1.bg-secondary
      .card-body.pt-0.pb-0.text-damp.text-right.bottags
      hr.mt-1.mb-3.bg-secondary
      .card-body.pt-0.botcard-btnholder
        a.btn.btn-sm.btn-blue.btn-block(href=`/bots/${card.botid}`) View Bot
        .btn-group.btn-block
